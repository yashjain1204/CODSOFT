#include<iostream>
using namespace std;

int main(){
    
    cout<<"----------Calculator----------"<<endl;
    cout<<"1.Addition"<<endl;
    cout<<"2.Subraction"<<endl;
    cout<<"3.Multiplication"<<endl;
    cout<<"4.Division"<<endl;
    cout<<"5.Exit"<<endl;
    
    int n,a,b;
    cout<<"Enter two numbers : ";
    cin>>a>>b;
    cout<<"Enter the operation :";
    cin>>n;
    
    while(n!=5){
        if(n==1){
            cout<<"The addition of two numbers is "<<a+b<<endl;
        }
        else if(n==2){
            cout<<"The subraction of two numbers is "<<a-b<<endl;
        }
        else if(n==3){
            cout<<"The Multipliaction of two numbers is "<<a*b<<endl;
        }
        else if(n==4){
            if(b==0){
                cout<<"Second number must not be equal to 0"<<endl;
            }
            else{
                cout<<"The division of two number is "<<a/b<<endl;
            }
        }
        else{
            cout<<"Invalid choice";
        }
       cout<<"Enter two numbers : ";
    cin>>a>>b; 
    cout<<"Enter the operation :";
    cin>>n;
    
    }
    return 0;

}
